{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": [ "es2015", "es2017", "dom", "dom.iterable" ],
      "newLine": "LF",
      "allowJs": true,
      "outDir": "dist",
      "rootDir": "./src",
      "removeComments": true,
      "strict": true,
      "alwaysStrict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "typeRoots": [ 
        "node_modules/@types"
      ],
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "noImplicitThis": true,
      "pretty": true
    },
    "include": [
       "src"
    ]
  }